main.mdl-layout__content
  .mdl-grid
    .mdl-card.mdl-shadow--6dp
      .mdl-card__title.mdl-color--primary.mdl-color-text--white
        .mdl-card__title-text NUEVO HABITACION
      .mdl-card__supporting-text(ng-controller='AddRoomController')
        form(action="#/")
          p Nombre 
            input(type='text', ng-model='user.name' placeholder="Habitacion I" required)
          p Host 
            input(type='text', ng-model='user.host' placeholder="www.host.com" required)
          p Port 
            input(type='text', ng-model='user.port' placeholder="9000" required)
          p user 
            input(type='text', ng-model='user.user' placeholder="admin" required)
          p pass 
            input(type='password', ng-model='user.pass' placeholder="*****" required)
          button(type='submit', ng-click='save(user)', value='Suscribir')
            |Guardar

style(type='text/css').
  .mdl-grid {
  max-width: 300px;
  margin-top: 20px;
  }
  .mdl-card__actions {
  display: flex;
  box-sizing:border-box;
  align-items: center;
  }
  .mdl-card__actions > .mdl-button--icon {
  margin-right: 3px;
  margin-left: 3px;
  }
  input[type=text], input[type=password] {
  width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  box-sizing: border-box;
  }
  button {
  background-color: #4CAF50;
  color: white;
  padding: 14px 20px;
  margin: 8px 0;
  border: none;
  cursor: pointer;
  width: 100%;
  }
